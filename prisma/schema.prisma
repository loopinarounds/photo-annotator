generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  rooms Room[]
}

model Room {
  id               Int    @id @default(autoincrement())
  ownerUserId      Int
  name             String
  liveblocksRoomId String
  image            String
  annotations      Json[]
  participants     User[]
}
